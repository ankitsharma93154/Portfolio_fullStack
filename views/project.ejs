<%- include('partials/header.ejs'); -%>

<header>
    <h1>My Projects</h1>
    <p>Here's some of the work that I have done recently.</p>
</header>

<div class="projects-grid">
    <% projects.forEach(project => { %>
    <div class="card">

        <div class="image-wrapper">
            <a href="<%= project.demoLink %>"><img src="<%= project.image %>" alt="<%= project.title %>" class="project-image"></a>
        </div>

        <div class="project-content">
            <h2><%= project.title %></h2>
            <p><%= project.description %></p>
            <p><strong>Built with: </strong> <ul class="tech-list"><%project.techStack.forEach(item =>{%>
                <li><%=item%></li> 
            <%}) %>
            </ul></p>

            <div class="projectLinks">
                <a href="<%= project.githubLink %>"><img src="/assets/github_icon.jpg" style=" height:40px;width:40px; border-radius: 5px; margin:10px; margin-left:0px"/></a>
                <a href="<%= project.demoLink %>"><img src="/assets/video_icon.jpg" style=" height:40px;width:60px; border-radius: 5px; margin:10px;" /></a>
            </div>

        </div>
        
    </div>
    <% }) %>
</div>
<%- include('partials/footer.ejs'); -%>
